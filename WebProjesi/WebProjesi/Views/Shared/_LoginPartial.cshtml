@using Microsoft.AspNetCore.Identity
@using WebProjesi.Areas.Identity.Data

@inject SignInManager<WebProjesiKullanici> SignInManager
@inject UserManager<WebProjesiKullanici> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a id="manage" class="nav-link text-white"  title="Manage">Merhaba @UserManager.GetUserName(User)!</a>
        </li>
        
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("giris", "film", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white">Çıkış Yap</button>
        </form>
        
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Kaydol</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
        </li>
    }
</ul>
